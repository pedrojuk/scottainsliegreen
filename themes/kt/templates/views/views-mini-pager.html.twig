{#
/**
 * @file
 * Theme override for a views mini-pager.
 *
 * Available variables:
 * - items: List of pager items.
 *
 * @see template_preprocess_views_mini_pager()
 */
#}
{% if items.previous or items.next %}
  <nav role="navigation" aria-labelledby="pagination-heading">
    <h4 class="visually-hidden">{{ 'Pagination'|t }}</h4>
    <div class="row pagination js-pager__items hide-for-medium">
      {% if items.current %}
        <div class="small-12 columns text-center">
          {% trans %}
          Page {{ items.current }}
          {% endtrans %}
        </div>
      {% endif %}
      {% if items.previous %}
        <div class="small-6 columns {{ not items.next ? 'end ' }}text-left">
          <a href="{{ items.previous.href }}" title="{{ 'Go to previous page'|t }}" rel="prev"{{ items.previous.attributes|without('href', 'title', 'rel') }}>
            <span class="visually-hidden">{{ 'Previous page'|t }}</span>
            <span aria-hidden="true">{{ items.previous.text|default('‹‹'|t) }}</span>
          </a>
        </div>
      {% endif %}
      {% if items.next %}
        <div class="small-6 {{ not items.previous ? 'small-offset-6 ' }}columns text-right">
          <a href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}" rel="next"{{ items.next.attributes|without('href', 'title', 'rel') }}>
            <span class="visually-hidden">{{ 'Next page'|t }}</span>
            <span aria-hidden="true">{{ items.next.text|default('››'|t) }}</span>
          </a>
        </div>
      {% endif %}
    </div>
    <div class="row pagination js-pager__items show-for-medium">
      {% if items.previous %}
        <div class="medium-4 columns text-left">
          <a href="{{ items.previous.href }}" title="{{ 'Go to previous page'|t }}" rel="prev"{{ items.previous.attributes|without('href', 'title', 'rel') }}>
            <span class="visually-hidden">{{ 'Previous page'|t }}</span>
            <span aria-hidden="true">{{ items.previous.text|default('‹‹'|t) }}</span>
          </a>
        </div>
      {% endif %}
      {% if items.current %}
        <div class="medium-4 {{ not items.previous ? 'medium-offset-4 ' }}columns {{ not items.next ? 'end ' }}text-center">
          {% trans %}
            Page {{ items.current }}
          {% endtrans %}
        </div>
      {% endif %}
      {% if items.next %}
        <div class="medium-4 columns text-right">
          <a href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}" rel="next"{{ items.next.attributes|without('href', 'title', 'rel') }}>
            <span class="visually-hidden">{{ 'Next page'|t }}</span>
            <span aria-hidden="true">{{ items.next.text|default('››'|t) }}</span>
          </a>
        </div>
      {% endif %}
    </div>
  </nav>
{% endif %}
